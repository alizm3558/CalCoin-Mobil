<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/calCoinLight"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ACTIVITYS.ActivityNotEkle">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.7"

        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/isimlik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="İSİMLER"
                android:textSize="20dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_weight="0.3"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.3">
            <EditText
                android:id="@+id/baslikText"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:hint="Enter title"
                android:background="@color/calCoinDark"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/fontColor"
                />
            <EditText
                android:id="@+id/notText"
                android:layout_width="match_parent"

                android:hint="Enter note"
                android:background="@color/calCoinDark"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:lines="6"
                android:maxLines="12"
                android:minLines="12"
                android:scrollbars="vertical"
                android:textColor="@color/fontColor"

                android:layout_marginBottom="5dp"
                />

            <Button
                android:id="@+id/kaydet"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@color/calCoinDark"
                android:onClick="save"
                android:text="Save"
                android:textSize="20dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

        </LinearLayout>

    </LinearLayout>

</LinearLayout>