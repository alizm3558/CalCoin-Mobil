<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/calCoinLight"
    android:orientation="vertical"
    tools:context=".ACTIVITYS.ActivitySign">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.5">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:background="@color/calCoinLight"

        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/calCoinLight"
            android:layout_weight="1"></LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/calCoinDark"
            android:orientation="vertical"
            android:layout_weight="0.5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:orientation="vertical">

                <EditText
                    android:layout_marginTop="20dp"
                    android:id="@+id/isim"
                    android:background="@color/editBox"
                    android:hint="User name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"/>

                <EditText

                    android:id="@+id/numara"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/editBox"
                    android:hint="Phone number"
                    />
                <EditText
                    android:id="@+id/sifre"
                    android:background="@color/editBox"
                    android:hint="Password "
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_height="50dp"/>
                <EditText
                    android:id="@+id/tekrar"
                    android:background="@color/editBox"
                    android:hint="Password again "
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>

                <Button
                    android:id="@+id/kaydet"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"

                    android:background="@color/editBox"

                    android:onClick="save"
                    android:text="Save"
                    android:textSize="20dp" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/calCoinLight"
            android:layout_weight="1"></LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.3">

    </LinearLayout>


</LinearLayout>